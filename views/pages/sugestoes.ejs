<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="relative-z-10 pt-24 pb-12">
  <div class="container mx-auto px-6 max-w-3xl">
    <h1 class="text-3xl md:text-4xl font-bold text-[var(--navy-primary)] mb-8 text-center">Sugestão de Projeto</h1>
    <p class="text-lg text-gray-600 mb-8 text-center">
      Tem uma ideia de projeto que gostaria de propor? Preencha o formulário abaixo!
    </p>

    <div class="bg-white p-8 rounded-lg shadow-md border border-gray-100">
      <form action="/sugestoes" method="POST" class="space-y-6">

        <div>
          <label for="titulo" class="block text-sm font-medium text-gray-700 mb-1">Título do Projeto:</label>
          <input
            type="text"
            name="titulo"
            id="titulo"
            required
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
          >
        </div>

        <div>
          <label for="empresa" class="block text-sm font-medium text-gray-700 mb-1">Nome da Empresa Solicitante:</label>
          <input
            type="text"
            name="empresa"
            id="empresa"
            required
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
          >
        </div>

        <div>
          <label for="urgencia" class="block text-sm font-medium text-gray-700 mb-1">Urgência de Implementação:</label>
          <select
            name="urgencia"
            id="urgencia"
            required
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
          >
            <option value="">Selecione...</option>
            <option value="baixa">Baixa</option>
            <option value="media">Média</option>
            <option value="alta">Alta</option>
            <option value="urgente">Urgente</option>
          </select>
        </div>

        <div>
          <label for="descricao" class="block text-sm font-medium text-gray-700 mb-1">Descrição Detalhada do Projeto:</label>
          <textarea
            name="descricao"
            id="descricao"
            rows="4"
            required
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
          ></textarea>
        </div>

        <div>
          <label for="linguagem" class="block text-sm font-medium text-gray-700 mb-1">Linguagem de Programação Sugerida:</label>
          <select
            name="linguagem"
            id="linguagem"
            required
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
            onchange="toggleOutraLinguagem(this.value)"
          >
            <option value="">Selecione...</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="JavaScript">JavaScript</option>
            <option value="TypeScript">TypeScript</option>
            <option value="outra">Outra</option>
          </select>
        </div>

        <div id="outraLinguagemCampo" style="display: none;">
          <label for="outraLinguagemNome" class="block text-sm font-medium text-gray-700 mb-1">Qual outra linguagem?</label>
          <input
            type="text"
            name="outraLinguagemNome"
            id="outraLinguagemNome"
            class="mt-1 block w-full rounded-md border shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)] border-[var(--navy-primary)]" {/* Classe 'border' adicionada, 'border-gray-300' removida */}
          >
        </div>

        <div class="pt-4 text-center">
          <button
            type="submit"
            class="bg-[var(--navy-primary)] text-white py-2.5 px-6 rounded-full font-medium hover:bg-[var(--navy-dark)] transition-colors duration-300 shadow-sm hover:shadow-md"
          >
            Enviar Sugestão
          </button>
        </div>

      </form>
    </div>
     <div class="text-center mt-6">
        <a href="/" class="text-sm text-gray-600 hover:text-[var(--navy-primary)]">&larr; Voltar ao Portfólio Principal</a>
      </div>
  </div>
</div>

<script>
  function toggleOutraLinguagem(selectedValue) {
    const campoOutra = document.getElementById('outraLinguagemCampo');
    if (selectedValue === 'outra') {
      campoOutra.style.display = 'block';
    } else {
      campoOutra.style.display = 'none';
      document.getElementById('outraLinguagemNome').value = ''; // Limpa o campo se mudar de volta
    }
  }
</script>

<%- include('../partials/footer') %>