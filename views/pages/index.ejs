<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="relative-z-10">
  <main>
    <section id="hero" class="pt-36 pb-20 md:pt-44 md:pb-28">
      <div class="max-w-3xl mx-auto text-center relative z-10">

        <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 text-blue-700 text-sm mb-8 border border-blue-200">
          <span class="h-2 w-2 bg-green-500 rounded-full mr-2"></span>
          Disponível para novos projetos!
        </div>

        <h1 class="font-bold text-gray-900 leading-tight hero-text">
          
          <span class="block text-5xl md:text-7xl">
            Vivian Santos
          </span>
          
          <span class="block mt-2 text-[var(--navy-primary)] custom-neon-text text-3xl md:text-5xl">
            Desenvolvedora de Software
          </span>
        </h1>


        <div class="mt-6 bg-white/30 backdrop-blur-sm p-4 rounded-lg max-w-xl mx-auto shadow-md">
            <p class="text-lg text-gray-800 leading-relaxed font-medium">
              <%= data.presentation.bio %>
            </p>
        </div>

        <div class="mt-10 flex justify-center space-x-4">
          <a href="#proyectos" class="bg-[var(--navy-primary)] text-white px-8 py-3.5 rounded-full font-medium hover:bg-[var(--navy-dark)] transition-all duration-300 shadow-md hover:shadow-lg flex items-center">
            <span>Explorar Projetos</span>
            <i class="fas fa-arrow-right ml-2 text-sm"></i>
          </a>
          
          <a href="#contacto" class="text-gray-600 px-8 py-3.5 rounded-full font-medium hover:text-[var(--navy-primary)] transition-all duration-300 border border-gray-300 hover:border-[var(--navy-primary)] flex items-center">
            <span>Contatar</span>
            <i class="fas fa-comment ml-2 text-sm"></i>
          </a>
        </div>
      </div>
    </section>

    <section id="sobre-mi" class="py-20 bg-blue-50">
      <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-12">
          <div class="w-full md:w-2/5 flex flex-col items-center">
            <h2 class="text-4xl font-bold text-[var(--navy-primary)] mb-10 text-center md:text-left">
              Sobre Mim
            </h2>
            <div class="relative w-64 h-64 rounded-full overflow-hidden shadow-2xl border-4 border-[var(--navy-light)]">
              <img src="<%= data.presentation.profilePic %>" alt="Foto de <%= data.presentation.fullName %>" class="w-full h-full object-cover" />
            </div>
          </div>
          <div class="w-full md:w-3/5 text-lg text-gray-700 space-y-6 mt-8 md:mt-0">
             <h3 class="text-2xl font-semibold text-gray-800">Formação Acadêmica</h3>
             <% data.education.forEach(edu => { %> <p class="leading-relaxed"><span class="font-semibold text-[var(--navy-primary)]"><%= edu.course %></span><br><%= edu.institution %> (<%= edu.period %>)</p> <% }) %>
      
             <h3 class="text-2xl font-semibold text-gray-800 pt-4">Cursos Complementares</h3>
             <ul class="list-disc list-inside"> <% data.certifications.forEach(cert => { %> <li><%= cert.name %></li> <% }) %> </ul>
             <h3 class="text-2xl font-semibold text-gray-800 pt-4">Competências Técnicas</h3>
             <div class="flex flex-wrap gap-3"> <% data.technicalSkills.forEach(skill => { %> <span class="bg-blue-100 text-[var(--navy-dark)] px-5 py-2 rounded-full text-base font-medium shadow-sm transition-all duration-300 hover:bg-[var(--navy-primary)] hover:text-white hover:scale-105 hover:shadow-md cursor-pointer"><%= skill %></span> <% }) %> </div>
             <h3 class="text-2xl font-semibold text-gray-800 pt-4">Competências Interpessoais</h3>
             <div class="flex flex-wrap gap-3"> <% data.softSkills.forEach(skill => { %> <span class="bg-gray-100 text-gray-800 px-5 py-2 rounded-full text-base font-medium shadow-sm transition-all duration-300 hover:bg-gray-600 hover:text-white hover:scale-105 hover:shadow-md cursor-pointer"><%= skill %></span> <% }) %> </div>
             <h3 class="text-2xl font-semibold text-gray-800 pt-4">Idiomas</h3>
             <div class="flex flex-wrap gap-3"> <% data.languages.forEach(lang => { %> <span class="bg-gray-100 text-gray-800 px-5 py-2 rounded-full text-base font-medium shadow-sm transition-all duration-300 hover:bg-gray-600 hover:text-white hover:scale-105 hover:shadow-md cursor-pointer"><%= lang %></span> <% }) %> </div>
          </div>
        </div>
      </div>
    </section>

    <section id="proyectos" class="py-24 max-w-6xl mx-auto px-6 lg:px-8">
     <div class="text-center mb-16">
        <div class="inline-block bg-white/70 backdrop-blur-sm p-6 rounded-lg shadow-md max-w-xl mx-auto">
          <h2 class="text-4xl font-bold text-[var(--navy-primary)]">Projetos Selecionados</h2>
          <p class="mt-3 text-gray-700">
            Uma amostra do meu trabalho mais recente, onde design e desenvolvimento se unem.
          </p>
        </div>
      </div>

      <div class="relative">
        <div class="swiper project-swiper overflow-hidden">
          <div class="swiper-wrapper">
            
            <% data.projects.forEach(project => { %>
              <div class="swiper-slide h-auto pb-4"> <a href="<%= project.link %>" class="block group card-hover bg-white rounded-xl border border-gray-100 shadow-sm p-6 transition-all duration-300 hover:shadow-lg hover:border-blue-300 hover:-translate-y-1 h-full flex" target="_blank" rel="noopener noreferrer">
                  <div class="flex items-center">
                    <div class="flex-shrink-0"> <img src="<%= project.imageUrl %>" alt="Logo <%= project.title %>" class="w-16 h-16 object-contain"/> </div>
                    <div class="ml-5"> <h3 class="text-xl font-semibold text-gray-800 group-hover:text-[var(--navy-primary)]"><%= project.title %></h3> <p class="text-sm text-gray-600 mt-1"><%= project.description %></p> Não </div>
                  </div>
                </a>
              </div>
            <% }) %>
            
          </div>
        </div>
        
        <div class="swiper-button-prev-custom absolute top-1/2 left-0 -translate-y-1/2 -translate-x-8 md:-translate-x-12 z-10 cursor-pointer p-3 bg-white/70 rounded-full shadow-lg hover:bg-white transition-colors">
          <i class="fas fa-chevron-left text-[var(--navy-primary)]"></i>
        </div>
        <div class="swiper-button-next-custom absolute top-1/2 right-0 -translate-y-1/2 translate-x-8 md:translate-x-12 z-10 cursor-pointer p-3 bg-white/70 rounded-full shadow-lg hover:bg-white transition-colors">
          <i class="fas fa-chevron-right text-[var(--navy-primary)]"></i>
        </div>
      </div>

      <div class="text-center mt-12"> <a href="/admin" class="inline-flex items-center text-gray-600 hover:text-[var(--navy-primary)] font-medium transition-colors"><span>Gerenciar projetos (Admin)</span><i class="fas fa-arrow-right ml-2 text-sm"></i></a> </div>
    </section>
    <section class="py-24 bg-blue-50">
      <div class="max-w-6xl mx-auto px-6 lg:px-8 text-center">
        
        <h2 class="text-4xl font-bold text-[var(--navy-primary)] mb-4">
          Gostou de algum projeto?
        </h2>
        
        <p class="text-lg text-gray-700 leading-relaxed mb-10 max-w-2xl mx-auto">
          Faça sua sugestão na aba de sugestões ou me chame no LinkedIn para conversarmos!
        </p>
        
        <div class="mt-10 flex flex-col sm:flex-row justify-center items-center space-y-4 sm:space-y-0 sm:space-x-4">
          
          <a 
            href="/sugestoes" 
            class="bg-[var(--navy-primary)] text-white px-8 py-3.5 rounded-full font-medium hover:bg-[var(--navy-dark)] transition-all duration-300 shadow-md hover:shadow-lg flex items-center w-full sm:w-auto justify-center"
          >
            <i class="fas fa-lightbulb mr-2 text-sm"></i>
            <span>Fazer uma Sugestão</span>
          </a>
          
          <a 
            href="<%= data.socialLinks.find(link => link.name === 'LinkedIn').href %>" 
            target="_blank" 
            rel="noopener noreferrer" 
            class="text-gray-600 px-8 py-3.5 rounded-full font-medium hover:text-[var(--navy-primary)] transition-all duration-300 border border-gray-300 hover:border-[var(--navy-primary)] flex items-center w-full sm:w-auto justify-center bg-white"
          >
            <i class="fab fa-linkedin-in mr-2 text-sm"></i>
            <span>Chamar no LinkedIn</span>
          </a>
          
        </div>
        
      </div>
    </section>

  </main>

  <%- include('../partials/footer', { data: data }) %>
</div>