<%- include('../partials/head') %>
<%- include('../partials/header') %>

<div class="relative-z-10">
  <main>
    <section id="hero" class="pt-36 pb-20 md:pt-44 md:pb-28">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center px-4 py-2 rounded-full bg-blue-100 text-blue-700 text-sm mb-8 border border-blue-200">
          <span class="h-2 w-2 bg-blue-600 rounded-full mr-2"></span>
          Disponível para novos projetos!
        </div>
        <h1 class="text-4xl md:text-6xl font-bold text-gray-900 leading-tight hero-text">
          Análise e Desenvolvimento de <span class="text-blue-700">Sistemas</span>
        </h1>
        <p class="mt-6 text-lg text-gray-600 max-w-xl mx-auto leading-relaxed">
          <%= data.presentation.bio %>
        </p>
        <div class="mt-10 flex justify-center space-x-4">
          <a href="#proyectos" class="bg-blue-700 text-white px-8 py-3.5 rounded-full font-medium hover:bg-blue-800 transition-all duration-300 shadow-md hover:shadow-lg flex items-center">
            <span>Explorar Projetos</span>
            <i class="fas fa-arrow-right ml-2 text-sm"></i>
          </a>
          <a href="#contacto" class="text-gray-600 px-8 py-3.5 rounded-full font-medium hover:text-blue-700 transition-all duration-300 border border-gray-300 hover:border-blue-500 flex items-center">
            <span>Contatar</span>
            <i class="fas fa-comment ml-2 text-sm"></i>
          </a>
        </div>
      </div>
    </section>

    <section id="sobre-mi" class="py-20 bg-blue-50">
      <div class="max-w-6xl mx-auto px-6 lg:px-8">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-12">
          
          <div class="w-full md:w-2/5 flex flex-col items-center">
            <h2 class="text-4xl font-extrabold text-blue-900 mb-6 text-center md:text-left">
              Sobre Mim
            </h2>
            <div class="w-24 h-1.5 bg-blue-600 rounded mb-10"></div>
            <div class="relative w-64 h-64 rounded-full overflow-hidden shadow-2xl border-4 border-blue-200">
              <img src="<%= data.presentation.profilePic %>" alt="Foto de <%= data.presentation.fullName %>" class="w-full h-full object-cover" />
            </div>
          </div>
          
          <div class="w-full md:w-3/5 text-lg text-gray-700 space-y-6 mt-8 md:mt-0">
            <h3 class="text-2xl font-semibold text-gray-800">Formação Acadêmica</h3>
            <% data.education.forEach(edu => { %>
              <p class="leading-relaxed">
                <span class="font-semibold text-blue-600"><%= edu.course %></span>
                <br>
                <%= edu.institution %> (<%= edu.period %>)
              </p>
            <% }) %>

            <h3 class="text-2xl font-semibold text-gray-800 pt-4">Cursos Complementares</h3>
            <ul class="list-disc list-inside">
              <% data.certifications.forEach(cert => { %>
                <li><%= cert.name %></li>
              <% }) %>
            </ul>

            <h3 class="text-2xl font-semibold text-gray-800 pt-4">Competências Técnicas</h3>
            <div class="flex flex-wrap gap-3">
              <% data.technicalSkills.forEach(skill => { %>
                <span class="bg-blue-100 text-blue-800 px-5 py-2 rounded-full text-base font-medium shadow-sm"><%= skill %></span>
              <% }) %>
            </div>

            <h3 class="text-2xl font-semibold text-gray-800 pt-4">Competências Interpessoais</h3>
            <div class="flex flex-wrap gap-3">
              <% data.softSkills.forEach(skill => { %>
                <span class="bg-gray-100 text-gray-800 px-5 py-2 rounded-full text-base font-medium shadow-sm"><%= skill %></span>
              <% }) %>
            </div>
          </div>
        </div>
      </div>
    </section>

    <section id="proyectos" class="py-24 max-w-6xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-gray-900">Projetos Selecionados</h2>
        <p class="mt-3 text-gray-500 max-w-lg mx-auto">
          Uma amostra do meu trabalho mais recente, onde design e desenvolvimento se unem.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        
        <% data.projects.forEach(project => { %>
          <a 
            href="<%= project.link %>" 
            class="block group card-hover bg-white rounded-xl border border-gray-100 shadow-sm p-6
                   transition-all duration-300 hover:shadow-lg hover:border-blue-200"
            target="_blank"
            rel="noopener noreferrer"
          >
            <div class="flex items-center">
              
              <div class="flex-shrink-0">
                <img 
                  src="<%= project.imageUrl %>" 
                  alt="Logo <%= project.title %>" 
                  class="w-16 h-16 object-contain"
                />
              </div>
              
              <div class="ml-5">
                <h3 class="text-xl font-semibold text-gray-800 group-hover:text-blue-600">
                  <%= project.title %>
                </h3>
                <p class="text-gray-500 mt-1 text-sm">
                  <%= project.description %>
                </p>
              </div>

            </div>
          </a>
        <% }) %>
      </div>
      <div class="text-center mt-12">
        <a href="/admin" class="inline-flex items-center text-gray-600 hover:text-blue-700 font-medium transition-colors">
          <span>Gerenciar projetos (Admin)</span>
          <i class="fas fa-arrow-right ml-2 text-sm"></i>
        </a>
      </div>
    </section>
  </main>
  
  <%- include('../partials/footer', { data: data }) %>
</div>