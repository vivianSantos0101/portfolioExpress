<%- include('../partials/head') %>

<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-sm">
    <h1 class="text-2xl font-bold text-center text-[var(--navy-primary)] mb-6">Login Administrativo</h1>

    <% if (typeof error !== 'undefined' && error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        <span class="block sm:inline"><%= error %></span>
      </div>
    <% } %>

    <form action="/login" method="POST">
      <div class="mb-4">
        <label for="password" class="block text-sm font-medium text-gray-700">Senha</label>
        <input
          type="password"
          name="password"
          id="password"
          required
          class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-[var(--navy-primary)] focus:ring-[var(--navy-primary)]"
        >
      </div>
      <div>
        <button
          type="submit"
          class="w-full bg-[var(--navy-primary)] text-white py-2 px-4 rounded-md font-medium hover:bg-[var(--navy-dark)] transition-colors duration-300"
        >
          Entrar
        </button>
      </div>
    </form>
     <div class="text-center mt-4">
        <a href="/" class="text-sm text-gray-600 hover:text-[var(--navy-primary)]">&larr; Voltar ao Portf√≥lio</a>
      </div>
  </div>
</div>

</body>
</html>