<%- include('../partials/head') %>

<div class="binary-background-light">
  <div class="binary-rain" id="binaryRainSkills"></div>
</div>

<div class="relative z-10 min-h-screen bg-transparent pt-24 pb-12">
  <div class="container mx-auto px-6 lg:px-10">
    <h1 class="text-3xl md:text-4xl font-bold text-[var(--navy-primary)] mb-6">Gerenciador de Competências (Skills)</h1>
    
    <div class="mb-8 flex space-x-6">
      <a href="/admin" class="text-gray-600 hover:text-[var(--navy-primary)] font-medium transition-colors">&larr; Voltar para Projetos</a>
      <a href="/" class="text-blue-600 hover:text-[var(--navy-primary)] transition-colors">Ver Portfólio</a>
    </div>

    <div class="bg-white/85 backdrop-blur-md p-6 md:p-8 rounded-lg shadow-xl mb-12 border border-gray-200/50">
      <h2 class="text-2xl font-semibold mb-6 text-[var(--navy-primary)]">
        <% if (skillToEdit) { %>
          Editar Competência: <%= skillToEdit.name %>
        <% } else { %>
          Adicionar Nova Competência
        <% } %>
      </h2>

      <form
        action="<%= skillToEdit ? '/admin/skills/update/' + skillToEdit.id : '/admin/skills/add' %>"
        method="POST"
        class="space-y-4"
      >
        <% if (skillToEdit) { %>
          <input type="hidden" name="_method" value="PUT">
        <% } %>

        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nome da Competência</label>
          <input
            type="text" name="name" id="name" required
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
            value="<%= skillToEdit ? skillToEdit.name : '' %>"
          >
        </div>
        
        <div>
          <label for="type" class="block text-sm font-medium text-gray-700 mb-1">Tipo</label>
          <select 
            name="type" id="type" required
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
          >
            <option value="technical" <%= skillToEdit && skillToEdit.type === 'technical' ? 'selected' : '' %>>Técnica</option>
            <option value="soft" <%= skillToEdit && skillToEdit.type === 'soft' ? 'selected' : '' %>>Interpessoal (Soft Skill)</option>
          </select>
        </div>

        <div class="flex items-center space-x-4 pt-2">
          <button type="submit" class="bg-white text-[var(--navy-primary)] px-5 py-2 rounded-full font-medium hover:bg-gray-200 transition-colors duration-300 shadow-sm border border-gray-300">
            <%= skillToEdit ? 'Salvar Alterações' : 'Adicionar Competência' %>
          </button>
          <% if (skillToEdit) { %>
            <a href="/admin/skills" class="text-gray-600 hover:text-gray-900 transition-colors">Cancelar Edição</a>
          <% } %>
        </div>
      </form>
    </div>

    <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-[var(--navy-primary)]">Competências Atuais</h2>
    <div class="space-y-6">
      <% skills.forEach(skill => { %>
        <div class="flex flex-col md:flex-row items-start md:items-center justify-between bg-white/85 backdrop-blur-md p-4 md:p-6 rounded-lg shadow-lg border border-gray-200/50">
          
          <div class="mb-4 md:mb-0 md:mr-6">
            <h3 class="text-lg font-semibold text-gray-900"><%= skill.name %></h3>
            <p class="text-sm <%= skill.type === 'technical' ? 'text-blue-600' : 'text-pink-600' %> mt-1">
              Tipo: <%= skill.type === 'technical' ? 'Técnica' : 'Interpessoal' %>
            </p>
          </div>
          
          <div class="flex space-x-3 flex-shrink-0">
            <a href="/admin/skills/edit/<%= skill.id %>" class="bg-white text-[var(--navy-primary)] px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-300 text-sm shadow border border-gray-300">
              Editar
            </a>
            
            <form action="/admin/skills/delete/<%= skill.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="bg-white text-red-600 px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-300 text-sm shadow border border-gray-300">
              Deletar
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('binaryRainAdmin');
    if (!container) { console.error("Elemento #binaryRainAdmin não encontrado!"); return; }
    const digits = ['0', '1'];
    function createDigit() {
      const digit = document.createElement('div');
      digit.className = 'binary-digit';
      digit.textContent = digits[Math.floor(Math.random() * digits.length)];
      digit.style.left = Math.random() * 100 + 'vw';
      const isFalling = Math.random() > 0.3;
      digit.style.animationName = isFalling ? 'fall-straight' : 'rise-straight';
      digit.style.animationDuration = (Math.random() * 20 + 10) + 's';
      digit.style.opacity = Math.random() * 0.15 + 0.05;
      digit.style.fontSize = (Math.random() * 8 + 12) + 'px';
      digit.style.fontWeight = Math.random() > 0.8 ? '600' : '300';
      digit.style.fontFamily = "'Courier New', monospace";
      container.appendChild(digit);
      setTimeout(() => {
        if (digit && digit.parentNode === container) { container.removeChild(digit); }
      }, parseFloat(digit.style.animationDuration) * 1000);
    }
    for (let i = 0; i < 80; i++) {
      setTimeout(createDigit, Math.random() * 2000);
    }
    const interval = setInterval(createDigit, 120);
  });
</script>

</body>
</html>