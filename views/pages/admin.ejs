<%- include('../partials/head') %>

<div class="binary-background-light">
  <div class="binary-rain" id="binaryRainAdmin"></div>
</div>

<div class="relative z-10 min-h-screen bg-transparent pt-24 pb-12">
  <div class="container mx-auto px-6 lg:px-10">
    
    <h1 class="text-3xl md:text-4xl font-bold text-[var(--navy-primary)] mb-6">Painel Administrativo</h1>
    
    <div class="mb-8 flex flex-wrap gap-4 items-center">
        <a href="/" class="text-gray-600 hover:text-[var(--navy-primary)] font-medium transition-colors">&larr; Voltar ao Portfólio</a>

        <div class="flex flex-wrap gap-2 sm:gap-4 bg-gray-100 p-2 rounded-lg shadow-inner">
            <span class="font-semibold text-[var(--navy-primary)] py-1 px-3 rounded-md bg-white shadow-sm border border-gray-200 text-sm sm:text-base">
                Gerenciar Projetos
            </span>
            <a href="/admin/skills" class="text-gray-700 py-1 px-3 rounded-md hover:bg-white hover:text-[var(--navy-primary)] transition-colors text-sm sm:text-base">
                Gerenciar Competências
            </a>
            <a href="/admin/languages" class="text-gray-700 py-1 px-3 rounded-md hover:bg-white hover:text-[var(--navy-primary)] transition-colors text-sm sm:text-base">
                Gerenciar Idiomas
            </a>
        </div>
    </div>
    <div class="bg-white/85 backdrop-blur-md p-6 md:p-8 rounded-lg shadow-xl mb-12 border border-gray-200/50">
      <h2 class="text-2xl font-semibold mb-6 text-[var(--navy-primary)]">
        <% if (projectToEdit) { %>
          Editar Projeto: <%= projectToEdit.title %>
        <% } else { %>
          Adicionar Novo Projeto
        <% } %>
      </h2>

      <form
        action="<%= projectToEdit ? '/admin/update/' + projectToEdit.id : '/admin/add' %>"
        method="POST"
        class="space-y-4"
      >
        <% if (projectToEdit) { %>
          <input type="hidden" name="_method" value="PUT">
        <% } %>

        <div>
          <label for="title" class="block text-sm font-medium text-gray-700 mb-1">Título</label>
          <input
            type="text" name="title" id="title" required
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
            value="<%= projectToEdit ? projectToEdit.title : '' %>"
          >
        </div>

        <div>
          <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Descrição</label>
          <textarea
            name="description" id="description" required rows="3"
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
          ><%= projectToEdit ? projectToEdit.description : '' %></textarea>
        </div>

        <div>
          <label for="imageUrl" class="block text-sm font-medium text-gray-700 mb-1">URL da Imagem/Logo</label>
          <input
            type="url" name="imageUrl" id="imageUrl" required
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
            value="<%= projectToEdit ? projectToEdit.imageUrl : '' %>"
          >
        </div>

        <div>
          <label for="link" class="block text-sm font-medium text-gray-700 mb-1">Link do Projeto</label>
          <input
            type="url" name="link" id="link" required
            class="mt-1 block w-full rounded-md border border-gray-300 bg-white text-gray-900 shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2"
            value="<%= projectToEdit ? projectToEdit.link : '' %>"
          >
        </div>

        <div class="flex items-center space-x-4 pt-2">
          <button type="submit" class="bg-white text-[var(--navy-primary)] px-5 py-2 rounded-full font-medium hover:bg-gray-200 transition-colors duration-300 shadow-sm border border-gray-300">
            <%= projectToEdit ? 'Salvar Alterações' : 'Adicionar Projeto' %>
          </button>
          <% if (projectToEdit) { %>
            <a href="/admin" class="text-gray-600 hover:text-gray-900 transition-colors">Cancelar Edição</a>
          <% } %>
        </div>
      </form>
    </div>
    <h2 class="text-2xl md:text-3xl font-semibold mb-6 text-[var(--navy-primary)]">Projetos Atuais</h2>
    <div class="space-y-6">
      <% projects.forEach(project => { %>
        <div class="flex flex-col md:flex-row items-start md:items-center justify-between bg-white/85 backdrop-blur-md p-4 md:p-6 rounded-lg shadow-lg border border-gray-200/50">
          
          <div class="flex items-center mb-4 md:mb-0 md:mr-6">
            <img src="<%= project.imageUrl %>" alt="Logo <%= project.title %>" class="w-10 h-10 object-contain mr-4 rounded-md flex-shrink-0" />
            <div>
              <h3 class="text-lg font-semibold text-gray-900"><%= project.title %></h3>
              <p class="text-sm text-gray-600 truncate max-w-sm"><%= project.description %></p>
            </div>
          </div>
          
          <div class="flex space-x-3 flex-shrink-0">
            <a href="/admin/edit/<%= project.id %>" class="bg-white text-[var(--navy-primary)] px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-300 text-sm shadow border border-gray-300">
              Editar
            </a>
            
            <form action="/admin/delete/<%= project.id %>" method="POST">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="bg-white text-red-600 px-4 py-2 rounded-md font-medium hover:bg-gray-200 transition-colors duration-300 text-sm shadow border border-gray-300" onclick="return confirm('Tem certeza que deseja deletar o projeto: <%= project.title %>?');">
              Deletar
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
    </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const container = document.getElementById('binaryRainAdmin');
    if (!container) { console.error("Elemento #binaryRainAdmin não encontrado!"); return; }
    const digits = ['0', '1'];
    function createDigit() {
      const digit = document.createElement('div');
      digit.className = 'binary-digit';
      digit.textContent = digits[Math.floor(Math.random() * digits.length)];
      digit.style.left = Math.random() * 100 + 'vw';
      const isFalling = Math.random() > 0.3;
      digit.style.animationName = isFalling ? 'fall-straight' : 'rise-straight';
      digit.style.animationDuration = (Math.random() * 20 + 10) + 's';
      digit.style.opacity = Math.random() * 0.15 + 0.05;
      digit.style.fontSize = (Math.random() * 8 + 12) + 'px';
      digit.style.fontWeight = Math.random() > 0.8 ? '600' : '300';
      digit.style.fontFamily = "'Courier New', monospace";
      container.appendChild(digit);
      setTimeout(() => {
        if (digit && digit.parentNode === container) { container.removeChild(digit); }
      }, parseFloat(digit.style.animationDuration) * 1000);
    }
    for (let i = 0; i < 60; i++) {
      setTimeout(createDigit, Math.random() * 2000);
    }
    const interval = setInterval(createDigit, 150);
  });
</script>

</body>
</html>